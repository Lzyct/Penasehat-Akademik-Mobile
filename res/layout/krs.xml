<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.ukietux.pamobile.utils.CustomTextView
            android:id="@+id/ips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_bg"
            android:textColor="@color/white"
            android:textSize="14.0dip" />

        <com.ukietux.pamobile.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip" />

        <com.ukietux.pamobile.utils.CustomTextView
            android:id="@+id/semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_bg"
            android:text="KRS"
            android:textColor="@color/white"
            android:textSize="14.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.ukietux.pamobile.utils.CustomTextView
            android:id="@+id/MaksimumSKS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_bg"
            android:text="KRS"
            android:textColor="@color/white"
            android:textSize="14.0dip" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <com.ukietux.pamobile.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" />

                <com.ukietux.pamobile.utils.CustomTextView
                    android:id="@+id/Notif1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2" />

                <TableLayout
                    android:id="@+id/semesterLalu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:stretchColumns="1" >
                </TableLayout>

                <com.ukietux.pamobile.utils.CustomTextView
                    android:id="@+id/TotSKSLalu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.ukietux.pamobile.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" />

                <com.ukietux.pamobile.utils.CustomTextView
                    android:id="@+id/Notif2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2" />

                <TableLayout
                    android:id="@+id/semesterSekarang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:stretchColumns="1" >
                </TableLayout>

                <com.ukietux.pamobile.utils.CustomTextView
                    android:id="@+id/TotSKSSek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.ukietux.pamobile.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" />

                <com.ukietux.pamobile.utils.CustomTextView
                    android:id="@+id/Notif3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"/>

                <TableLayout
                    android:id="@+id/semesterSekarangPilihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:stretchColumns="1" >
                </TableLayout>

                <com.ukietux.pamobile.utils.CustomTextView
                    android:id="@+id/TotSKSSekP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>